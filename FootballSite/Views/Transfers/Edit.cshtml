@model FootballSite.Transfer

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити</h1>

<h4>Трансфер</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransferId" autocomplete="off"/>
            <input type="hidden" asp-for="SellerId" autocomplete="off"/>
            <input type="hidden" asp-for="BuyerId" autocomplete="off"/>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostOfPlayer" class="control-label"></label>
                <input asp-for="CostOfPlayer" class="form-control" autocomplete="off"/>
                <span asp-validation-for="CostOfPlayer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" autocomplete="off"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
