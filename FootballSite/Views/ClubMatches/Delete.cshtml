@model FootballSite.ClubMatch

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити</h1>

<h3>Ви впевнені що хочете видалити цей матч?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatchName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchResult)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatchResult)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatchDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstClub)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstClub.ClubName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SecondClub)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondClub.ClubName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MatchId" />
        <input type="hidden" asp-for="FirstClubId" />
        <input type="hidden" asp-for="SecondClubId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
