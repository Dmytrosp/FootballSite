@model FootballSite.Club

@{
    ViewData["Title"] = "Create";
}

<h1>Створити</h1>

<h4>Клуб</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClubName" class="control-label"></label>
                <input asp-for="ClubName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachFirstName" class="control-label"></label>
                <input asp-for="CoachFirstName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="CoachFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachLastName" class="control-label"></label>
                <input asp-for="CoachLastName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="CoachLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachDateOfBirth" class="control-label"></label>
                <input asp-for="CoachDateOfBirth" class="form-control" autocomplete="off"/>
                <span asp-validation-for="CoachDateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumName" class="control-label"></label>
                <input asp-for="StadiumName" class="form-control" autocomplete="off"/>
                <span asp-validation-for="StadiumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumCapacity" class="control-label"></label>
                <input asp-for="StadiumCapacity" class="form-control" autocomplete="off"/>
                <span asp-validation-for="StadiumCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoachBiography" class="control-label"></label>
                <textarea asp-for="CoachBiography" class="form-control"></textarea>
                <span asp-validation-for="CoachBiography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" autocomplete="off"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
